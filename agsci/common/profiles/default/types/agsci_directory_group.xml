<?xml version="1.0"?>
<object name="DirectoryGroup" meta_type="Dexterity FTI" i18n:domain="plone"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title" i18n:translate="">DirectoryGroup</property>
 <property name="description" i18n:translate="">None</property>
 <property name="icon_expr">string:${portal_url}/document_icon.png</property>
 <property name="factory">agsci_directory_group</property>
 <property
    name="add_view_expr">string:${folder_url}/++add++agsci_directory_group</property>
 <property name="link_target"></property>
 <property name="immediate_view">view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types" purge="False">
  <element value="agsci_person"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">view</property>
 <property name="view_methods">
  <element value="view"/>
  <element value="table_view"/>
 </property>
 <property name="default_view_fallback">False</property>
 <property name="add_permission">cmf.ManagePortal</property>
 <property name="klass">agsci.common.content.person.directory.DirectoryGroup</property>
 <property name="behaviors">
    <element value="plone.app.dexterity.behaviors.metadata.IBasic"/>
    <element value="plone.app.content.interfaces.INameFromTitle" />
    <element value="dexterity.membrane.behavior.group.IMembraneGroup" />
 </property>

  <property name="schema">agsci.common.content.person.directory.IDirectoryGroup</property>

 <property name="schema_policy">dexterity</property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="@@edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    description="" icon_expr="" link_target="" url_expr="string:${object_url}"
    visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    description="" icon_expr="" link_target=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Modify portal content"/>
 </action>
</object>
