<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">

  <div id="parent-fieldname-text"
       tal:define="text context/aq_base/text|nothing"
       tal:condition="text"
       tal:content="structure python:context.text.output_relative_to(view.context)" />

  <tal:results define="batch view/batch;
                       normalizeString nocall: context/plone_utils/normalizeString;">
      <tal:listing condition="batch">

        <div class="accordion mt-3 px-2 px-md-0" 
            tal:attributes="id accordion_id"
            tal:define="accordion_id string:accordion-${context/getId}">

          <tal:repeat repeat="item batch">

            <tal:block tal:define="obj item/getObject;
                item_url python:view.getItemURL(item);
                item_id item/getId;
                item_title item/Title;
                item_description item/Description;
                item_type item/Type;
                item_modified item/ModificationDate;
                item_created item/CreationDate;
                item_type_class python:'contenttype-' + normalizeString(item_type);
                item_wf_state item/review_state;
                item_wf_state_class python:'state-' + normalizeString(item_wf_state);
                item_creator item/Creator;
                item_has_image python:item.getIcon;">

                <div class="card" tal:attributes="id string:section-${item_id}">

                    <h2 class="mt-2 card-header border-0 p-0">
                      <button
                        tal:attributes="data-target string:#collapse-${item_id};
                                        aria-controls string:collapse-${item_id};
                                        id string:button-${item_id}"
                        class="btn btn-large px-4" 
                        type="button" 
                        data-toggle="collapse" 
                        aria-expanded="false" 
                        tal:content="item_title" />

                    </h2>

                    <div
                        tal:attributes="id string:collapse-${item_id};
                                        data-parent string:#${accordion_id};
                                        arai-labelledby string:button-${item_id};"
                        class="accordion-collapse collapse hide">

                        <div class="card-body html">
                            <div class="small mb-2"
                                 tal:condition="not: view/anonymous"><a tal:attributes="href string:${item_url}/edit"
                                tal:content="string:Edit ${item_title}" /></div>

                            <div class="small mb-3"
                                tal:condition="not:view/anonymous|nothing">
                                <a tal:attributes="href string:${view/public_url}#section-${item_id}"
                                   tal:content="string:${item_title} anchor" />
                            </div>

                            <p class="lead mt-1 mb-3"
                                tal:condition="item_description"
                                tal:content="item_description" />
            
                            <div
                                tal:define="text obj/aq_base/text|nothing"
                                tal:condition="text"
                                tal:replace="structure python:obj.aq_base.text.output_relative_to(view.context)" />

                        </div>
                    </div>

            </div>

            </tal:block>

          </tal:repeat>

        </div>

      </tal:listing>

  </tal:results>

</metal:block>
</metal:content-core>

</body>
</html>
