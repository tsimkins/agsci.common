<div id="primary-nav-viewlet"
    tal:define="nav view/nav|nothing">

    <nav class="navbar navbar-expand-lg">

        <a tal:attributes="href view/portal_url"
           class="navbar-brand d-lg-none"><img
                tal:attributes="src string:${view/portal_url}/++resource++agsci.common/assets/images/psu-agr-logo-rev-single.png"
                alt="Penn State College of Agricultural Science Logo"
                class="agsci-logo pl-3"></a>

        <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"><i
                class="fa fa-bars"></i></button>

        <div class="collapse navbar-collapse py-0" id="navbarSupportedContent">

        <ul class="navbar-nav py-0 mx-auto dropdown-selectors">

            <tal:li tal:repeat="l1 nav/items/item">

                <li tal:attributes="class klass"
                    tal:define="item_id python:view.label(l1.title.cdata);
                                hidden l1/hidden/cdata|nothing;
                                klass python: hidden and 'nav-item dropdown d-lg-none' or 'nav-item dropdown'">

                    <a tal:content="l1/title/cdata"
                       tal:attributes="id item_id"
                       class="nav-link dropdown-toggle nav-external-link"
                       href="https://google.com"
                       role="button"
                       data-toggle="dropdown"
                       aria-haspopup="true"
                       aria-expanded="false" />

                    <button
                        tal:attributes="id item_id"
                        class="dropdown-toggle-button"
                        role="button"
                        data-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false"><i
                            class="fas fa-lg fa-angle-down"></i></button>

                    <div
                        tal:attributes="aria-labelledby item_id"
                        class="dropdown-menu dropdown-menu-light">

                        <div class="container px-0">

                            <div class="row mx-0">

                                <div class="col-12 col-md-6 col-lg-3 d-none d-lg-block">

                                    <p
                                        tal:content="l1/title/cdata"
                                        class="main-nav-section-head" />

                                    <div tal:condition="l1/image|nothing">
                                        
                                        <a class="nav-img-preview"
                                            tal:attributes="href l1/image/href/cdata|nothing">

                                            <div>
                                                <img 
                                                    tal:attributes="src l1/image/src/cdata|nothing"
                                                    alt="" 
                                                    class="w-100" />
                                            </div>
                                            <p tal:content="l1/image/title/cdata|nothing" />
                                        </a>
                                        
                                    </div>

                                </div>

                                <tal:group
                                    tal:repeat="group l1/items/group|nothing">

                                    <div class="col-12 col-md-6 col-lg-3">



<tal:block
    tal:repeat="l2 group/item|nothing">

    <tal:block
            tal:define="item_type python:view.type(l2)">


        <tal:item
            tal:condition="python: item_type == 'nav'">

            <ul class="nav flex-column">

                <li class="nav-item"
                    tal:condition="not: python:view.hidden(l2.title)">
                    <a
                        tal:content="l2/title/cdata"
                        class="nav-link section-header"
                        href="" />
                </li>

                <li tal:repeat="link l2/items/item|nothing"
                    class="nav-item">
                    <a
                        tal:content="link/title/cdata"
                        class="nav-link"
                        href=""></a>
                </li>
            </ul>

        </tal:item>

        <tal:item
            tal:condition="python: item_type == 'cta'">

<div class="cta-block">
    <a tal:repeat="link l2/items/item|nothing"
        class="nav-cta cta d-flex align-items-center">

        <i
            tal:attributes="class string:fas fa-lg ${link/icon/cdata} fa-fw" />

        <div
            tal:content="link/title/cdata"
            href="" />
    </a>
</div>
        </tal:item>

    </tal:block>
</tal:block>


                                    </div>
                                </tal:group>
                            </div>
                        </div>
                    </div>
                </li>
            </tal:li>

            <!-- Search Dropdown -->

            <li class="nav-item dropdown d-flex align-items-center">

                <form class="form-inline my-2 my-lg-0">

                    <input
                       class="form-control"
                       type="search"
                       placeholder="Search"
                       aria-label="Search">

                    <button
                     class="btn btn-primary my-2 my-sm-0"
                     type="submit"><i
                         class="fa fa-search"></i></button>

                 </form>

            </li>
        </ul>
    </nav>
</div>