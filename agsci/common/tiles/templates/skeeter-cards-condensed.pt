<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="agsci.common">
  <body>

<section
    tal:condition="view/show_tile|nothing"
    tal:attributes="class view/section_class|nothing;
                    data-tile-type view/tile_type|nothing">

    <div class="container px-0">

        <h2 class="mt-0"
            tal:define="title view/data/title|nothing"
            tal:condition="title"
            tal:content="title" />

        <div class="card-deck card-deck-2up agsci-visual-cards">
            <tal:items tal:repeat="i view/items|nothing">

                <a class="card card-visual card-horizontal container"
                   tal:attributes="href i/getURL">

                    <div class="row align-items-stretch mx-0">

                        <div class="col-12 col-lg-7 order-12 p-3">
                            <h3 class="card-title"
                                tal:content="i/Title|nothing" />

                            <p tal:content="i/Description|nothing" />

                        </div>

                        <div class="col-12 col-lg-5 order-1 px-0">
                            <img alt=""
                                 class="w-100"
                                 tal:attributes="src string:${i/getURL}/@@images/image/large" >
                        </div>
                    </div>
                </a>
            </tal:items>
        </div>
    </div>
</section>
  </body>
</html>
