<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="agsci.common">
  <body>

<section class="profile-section container-fluid py-5"
         tal:attributes="data-tile-type view/tile_type|nothing">

    <div class="container"
         tal:define="i view/featured|nothing"
         tal:condition="i|nothing">

        <div class="row align-items-center">

            <div class="col-12 col-md-6 profile-copy order-12">

                <p class="h2"
                   tal:content="i/Title|nothing" />
        
                <p tal:content="i/Description|nothing" />
        
                <p><a class="btn btn-test-creek"
                      tal:attributes="href i/getURL"><span>Read More</span></a></p>
            </div>    
    
            <div class="col-12 col-md-6 profile-img order-1">
            
                <img alt=""
                        class="w-100"
                        tal:attributes="src string:${i/getURL}/@@images/image/large" />
            </div>

        </div>

    </div>

    <div class="profile-section profiles-3up container-fluid pb-5">
        <div class="container">
            <div class="row align-items-center">
                <tal:items tal:repeat="i view/items|nothing">
                    <div class="col-12 col-lg-6 px-0">
                        <div class="container">
                            <div class="row mt-3">
                                <div class="col-12 col-md-6 profile-copy order-12 mt-3">
                                    <p class="h3" tal:content="i/Title|nothing" />
                                    <p></p>
                                    <p><a class="btn btn-test-creek" 
                                          tal:attributes="href i/getURL"><span>Read More</span></a></p>
                                </div>    
        
                                <div class="col-12 col-md-6 profile-img order-1">
                                    <img alt=""
                                            class="w-100"
                                            tal:attributes="src string:${i/getURL}/@@images/image/large" />
                                </div>
                            </div>
                        </div>
                    </div>
                </tal:items>
            </div>
        </div>
    </div>
</section>
  </body>
</html>
