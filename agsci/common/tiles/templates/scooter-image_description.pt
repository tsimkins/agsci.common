<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="agsci.common">
  <body>

<section class="mb-5"
         tal:attributes="data-tile-type view/tile_type|nothing">

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 tal:content="view/data/title|nothing" />
            </div>
        </div>
    </div>

    <div class="container">

        <div tal:attributes="class string:card-deck card-deck-${view/data/count}up agsci-visual-cards">

            <tal:items
                tal:repeat="i view/items|nothing">
       
                <a tal:attributes="href i/getURL|nothing"
                   class="card card-visual">
    
                    <div class="card-image-top">
                        <div class="opacity-dimmer-bottom-left"></div>
    
                        <img tal:attributes="src string:${i/getURL}/@@images/image/large" 
                             alt="" 
                             title="" 
                             class="w-100" />
    
                        <div class="card-img-overlay d-flex align-items-end justify-content-start text-white">
                            <h3 class="card-title"
                                tal:content="i/Title|nothing">
    
                        </div>

                    </div>

                    <div class="card-body">
                        <div class="card-text">                    
                            <p tal:content="i/Description|nothing" />
                        </div>
                    </div>
                 </a>

            </tal:items>

        </div>

    </div>

</section>

  </body>
</html>
