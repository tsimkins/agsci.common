<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="agsci.common">
  <body>

<section
    tal:attributes="data-tile-type view/tile_type|nothing">

<div class="container">

    <h2 tal:define="title view/data/title|nothing"
        tal:content="title"
        tal:condition="title" />

    <div tal:define="count view/count|nothing"
         tal:attributes="class string:card-deck card-deck-${count}up">

        <tal:people
            tal:repeat="context view/people|nothing">

             <!-- CARD -->
            <div class="card card-short-bio card-short-bio-horiz agsci-box-shadow"
                 tal:define="person_view python:view.person_view(context);
                             leadimage person_view/getItemLeadImage|nothing">
            
                <div class="card-body">
                    
                    <div class="row mx-0">
                        
                        <div class="col-4 col-sm-5 px-0"
                             tal:condition="leadimage">

                            <div class="card-img-crop">
                                <img tal:attributes="alt view/name/title|nothing;
                                                     title view/name/title|nothing;
                                                     src leadimage"
                                     class="w-100 photo" />
                            </div>

                        </div>
                        
                        <div class="col-8 col-sm-7 pr-0">
                            <div class="row mx-0">
                                <div class="col-12 p-0 pt-2">
                            
                                    <div class="card-title">
                                        <p>
                                            <a tal:attributes="href context/absolute_url|nothing"
                                               tal:content="person_view/name/title|nothing" />
                                        </p>
                                    </div>
                                    
                                    <p class="jobTitle"
                                        tal:content="person_view/job_title|nothing">
                                    
                                    <address class="list-inline list-inline-not-mobile list-bio-contact"
                                        tal:define="email context/email|nothing;
                                                    phone_number context/phone_number|nothing;">
                                        <div>
                                            <ul class="list-inline list-inline-not-mobile list-bio-contact">
                                                <li tal:condition="email">
                                                   <span>Email</span> 
                                                   <a tal:attributes="href string:mailto:${email}"
                                                      tal:content="email" />
                                                </li>
        
                                                <li tal:condition="phone_number">
                                                   <span>Office</span> 
                                                   <a tal:attributes="href string:tel:${phone_number}"
                                                      tal:content="phone_number" />
                                                </li>
                                            </ul>
                                            
                                            <tal:social-media
                                                tal:define="twitter_url context/twitter_url|nothing;
                                                            facebook_url context/facebook_url|nothing;
                                                            youtube_url context/youtube_url|nothing;
                                                            linkedin_url context/linkedin_url|nothing;">
                                                            
                                                <metal:social-media
                                                    metal:use-macro="context/social-media/macros/social-media" />
                                            </tal:social-media>
                                        </div>
                                    </address>

                                </div>
                            </div>
                        </div>
                    
                    </div>
                </div>
            </div>       
        </tal:people>
    </div>

</section>

  </body>
</html>
