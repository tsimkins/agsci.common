<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="agsci.common">
  <body>

<section>

<div class="container"
     tal:attributes="data-tile-type view/tile_type|nothing">

    <h2 tal:define="title view/data/title|nothing"
        tal:content="title"
        tal:condition="title" />

    <div class="card-deck card-deck-4up">

        <tal:people
            tal:repeat="context view/people|nothing">

             <!-- CARD -->           

            <div class="card card-short-bio agsci-box-shadow"
                 tal:define="person_view python:view.person_view(context);
                             leadimage person_view/getItemLeadImage|nothing">

                <div class="card-body">
                
                    <div class="row mx-0">
                        <div class="col-4 col-sm-12 px-0"
                             tal:condition="leadimage">
                            <div class="card-img-crop">
                                <img tal:attributes="alt view/name/title|nothing;
                                                     title view/name/title|nothing;
                                                     src leadimage"
                                     class="w-100 photo" />
                            </div>
                        </div>
                
                        <div class="col-8 col-sm-12 pl-3 px-sm-0 pr-0">
            
                            <div class="row mx-0">

                                <div class="col-12 p-0 pt-2">
                
                                    <div class="card-title">
                                        <a tal:attributes="href context/absolute_url|nothing"
                                           tal:content="person_view/name/title|nothing">Marra Baker</a>
                                    </div>
                
                                    <p class="jobTitle"
                                        tal:content="person_view/job_title|nothing">

                                    <address class="d-inline-flex flex-column"
                                        tal:define="email context/email|nothing;
                                                    phone_number context/phone_number|nothing;
                                                    
                                        ">
                                        <div>
                                            <ul class="list-inline list-inline-not-mobile list-bio-contact">
                                                <li tal:condition="email">
                                                   <span>Email</span> 
                                                   <a tal:attributes="href string:mailto:${email}"
                                                      tal:content="email" />
                                                </li>
        
                                                <li tal:condition="phone_number">
                                                   <span>Office</span> 
                                                   <a tal:attributes="href string:tel:${phone_number}"
                                                      tal:content="phone_number" />
                                                </li>
                                            </ul>
                                        </div>
                                    </address>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </tal:people>
    </div>


</section>

  </body>
</html>
